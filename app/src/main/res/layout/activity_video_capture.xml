<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.camera.view.PreviewView
        android:id="@+id/previewView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintVertical_bias="0.2"
        app:layout_constraintDimensionRatio="3:2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonRecordVideo"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="@dimen/button_size"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin"
        android:drawableTop="@drawable/ic_camera_action"
        android:text="@string/start_record_video"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <Button
        android:id="@+id/btnRatioOneToOne"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="@dimen/button_size"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin"
        android:text="1:1"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@id/buttonRecordVideo"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnRatioThreeToTwo"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="@dimen/button_size"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin"
        android:text="3:2"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@id/buttonRecordVideo"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnRatioFourToFive"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="@dimen/button_size"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin"
        android:text="4:5"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@id/buttonRecordVideo"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>